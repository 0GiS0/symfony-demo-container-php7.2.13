{% extends '@App/layout.html.twig' %}



    {% block content %}

    <div class="row">

        <div class="col-md-10 col-md-offset-1">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-notice">
                    {{ message }}
                </div>
            {% endfor %}

            {% if articles is not empty %}
                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h3 class="panel-title">Articles list</h3>
                            </div>
                            <div class="col col-xs-6 text-right">
                                {# <a type="button" target="_blank" href="{{ path('article_add') }}" class="btn btn-sm btn-primary btn-create">Create New</a> #}
                                <a type="button" href="{{ path('article_add') }}" class="btn btn-sm btn-primary btn-create">Create New</a>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-list">
                            <thead>
                            <tr>
                                <th><em class="fa fa-cog"></em></th>
                                <th class="hidden-xs">Title</th>
                                <th>Release Date</th>
                                <th>Price</th>
                                <th>Type</th>
                                <th>Author</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for article in articles %}
                                <tr>
                                    <td align="center">
                                        <a class="btn btn-default" href="{{ path('article_edit', { 'id' : article.id }) }}"><em class="fa fa-pencil"></em></a>
                                        <a class="btn btn-danger" href="{{ path('article_remove', { 'id' : article.id }) }}"><em class="fa fa-trash"></em></a>
                                    </td>
                                    <td><a href="{{ path('article_detail', { 'id' : article.id }) }}" target="_blank">{{ article.title }}</a></td>
                                    <td>{{ article.releaseDate|date("d/m/Y") }}</td>
                                    <td>{{ article.price }} €</td>
                                    <td>{{ article.type.code }}</td>
                                    <td>{{ article.author.firstname ~ ' ' ~ article.author.lastname }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                    {#<div class="panel-footer">#}
                    {#<div class="row">#}
                    {#<div class="col col-xs-4">Page 1 of 5#}
                    {#</div>#}
                    {#<div class="col col-xs-8">#}
                    {#<ul class="pagination hidden-xs pull-right">#}
                    {#<li><a href="#">1</a></li>#}
                    {#<li><a href="#">2</a></li>#}
                    {#<li><a href="#">3</a></li>#}
                    {#<li><a href="#">4</a></li>#}
                    {#<li><a href="#">5</a></li>#}
                    {#</ul>#}
                    {#<ul class="pagination visible-xs pull-right">#}
                    {#<li><a href="#">«</a></li>#}
                    {#<li><a href="#">»</a></li>#}
                    {#</ul>#}
                    {#</div>#}
                    {#</div>#}
                    {#</div>#}
                </div>
            {% else %}

                <h2>Sorry ! :( there are no articles in database</h2>

            {% endif %}


        </div>
    </div>

{% endblock %}